---
const user = {
  nombre: 'Administrador',
  avatar: 'https://i.pravatar.cc/40?img=5' // temporal, puedes poner el logo de LUX u otro
};
---

<div class="w-full flex justify-between items-center px-6 py-4 bg-[#1a1a1a] border-b border-yellow-500 rounded-t-xl">
  <!-- Título -->
  <h1 class="text-yellow-400 text-xl font-bold">Bienvenido, {user.nombre}</h1>

  <!-- Menú usuario -->
  <div class="relative group">
    <button class="flex items-center gap-2 bg-[#111] hover:bg-yellow-400 hover:text-black transition text-yellow-400 px-4 py-2 rounded-lg font-semibold">
      <img src={user.avatar} alt="avatar" class="w-8 h-8 rounded-full" />
      <span class="hidden sm:inline">Cuenta</span>
    </button>

    <!-- Menú desplegable -->
    <div class="absolute right-0 mt-2 bg-[#111] border border-yellow-500 rounded-lg shadow-lg hidden group-hover:block z-10 min-w-[150px]">
      <a href="/admin/configuracion" class="block px-4 py-2 text-sm text-yellow-400 hover:bg-yellow-400 hover:text-black transition">⚙️ Configuraciones</a>
      <button class="w-full text-left px-4 py-2 text-sm text-red-400 hover:bg-red-500 hover:text-white transition">🔓 Cerrar sesión</button>
    </div>
  </div>
</div>
