<section class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6 p-6">
  <!-- Plantilla de Card -->
  <div class="flex flex-col items-center justify-center w-80 gap-2 p-6 bg-[#1a1a1a] rounded-2xl shadow-md hover:shadow-xl hover:bg-[#2a2a2a] transition duration-300 text-center">
    <svg class="w-10 h-10 text-amber-300 mb-2 transition-transform duration-300 group-hover:scale-110" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
      <path d="M8 7V3M16 7V3M3 11h18M5 19h14a2 2 0 0 0 2-2V7H3v10a2 2 0 0 0 2 2z"/>
    </svg>
    <p class="text-2xl font-bold text-amber-300 contador" data-target="18">0</p>
    <p class="text-amber-300">Eventos</p>
  </div>

  <div class="flex flex-col items-center justify-center gap-2 p-6 bg-[#1a1a1a] rounded-2xl shadow-md hover:shadow-xl hover:bg-[#2a2a2a] transition duration-300 text-center">
    <svg class="w-10 h-10 text-amber-300 mb-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
      <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2M9 11a4 4 0 1 0 0-8 4 4 0 0 0 0 8zM20 8v6M23 11h-6"/>
    </svg>
    <p class="text-2xl font-bold text-amber-300 contador" data-target="42">0</p>
    <p class="text-amber-300">Clientes</p>
  </div>

  <div class="flex flex-col items-center justify-center gap-2 p-6 bg-[#1a1a1a] rounded-2xl shadow-md hover:shadow-xl hover:bg-[#2a2a2a] transition duration-300 text-center">
    <svg class="w-10 h-10 text-amber-300 mb-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
      <path d="M3 3h18v18H3V3zm3 8h12M8 8h.01M8 16h.01M12 16h4"/>
    </svg>
    <p class="text-2xl font-bold text-amber-300 contador" data-target="27">0</p>
    <p class="text-amber-300">Seguimientos</p>
  </div>

  <div class="flex flex-col items-center justify-center gap-2 p-6 bg-[#1a1a1a] rounded-2xl shadow-md hover:shadow-xl hover:bg-[#2a2a2a] transition duration-300 text-center">
    <svg class="w-10 h-10 text-amber-300 mb-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
      <path d="M9 12l2 2 4-4M4 6h16M4 12h4m-4 6h16"/>
    </svg>
    <p class="text-2xl font-bold text-amber-300 contador" data-target="6">0</p>
    <p class="text-amber-300">Tareas pendientes</p>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const counters = document.querySelectorAll('.contador');

    counters.forEach(counter => {
      const target = +counter.getAttribute('data-target');
      let count = 0;
      const step = Math.ceil(target / 100); // velocidad

      const update = () => {
        if (count < target) {
          count += step;
          counter.innerText = count > target ? target : count;
          requestAnimationFrame(update);
        }
      };

      update();
    });
  });
</script>