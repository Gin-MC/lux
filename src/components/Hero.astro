<section class="relative h-[100vh] flex items-center justify-center text-white overflow-hidden">

  <!-- üé• Video de fondo -->
  <video autoplay muted loop playsinline class="absolute inset-0 w-full h-full object-cover opacity-100 z-0">
    <source src="/public/assets/videos/hero-bg.mp4" type="video/mp4" />
    Tu navegador no admite videos HTML5.
  </video>

  <!-- Capa oscura -->
  <div class="absolute inset-0 bg-black/60 z-10"></div>

  <!-- ‚ú® Contenido -->
  <div class="relative z-20 text-center px-4">
    <h1 class="text-5xl md:text-7xl font-extrabold tracking-wide text-[#FFD700] mb-4 animate-fade-delay-1">LUX</h1>
    <p class="text-xl md:text-2xl max-w-2xl mx-auto mb-6 animate-fade-delay-2">Cocteler√≠a de Autor & Servicio Exclusivo para Eventos Inolvidables</p>
    <a href="/contacto" class="inline-block bg-[#FFD700] text-black px-6 py-3 rounded-full text-lg font-semibold hover:bg-white transition duration-300 animate-fade-delay-3">
      Cotiza tu Evento
    </a>
  </div>

  <style>
    @keyframes fadeUp {
      from {
        transform: translateY(30px);
        opacity: 0;
      }
      to {
        transform: translateY(0);
        opacity: 1;
      }
    }

    .animate-fade-delay-1 {
      animation: fadeUp 3s ease-out forwards;
      animation-delay: 0.3s;
    }

    .animate-fade-delay-2 {
      animation: fadeUp 3s ease-out forwards;
      animation-delay: 0.6s;
    }

    .animate-fade-delay-3 {
      animation: fadeUp 3s ease-out forwards;
      animation-delay: 0.9s;
    }
  </style>
</section>
