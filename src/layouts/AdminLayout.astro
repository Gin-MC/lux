---
import '../styles/global.css';
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LUX Admin</title>
  </head>
  <body class="min-h-screen flex bg-black text-yellow-400 font-sans">

    <!-- Sidebar -->
    <aside class="bg-[#1a1a1a] p-6 hidden lg:block">
      <slot name="sidebar" />
    </aside>

    <!-- Main content -->
    <main class="flex-1 p-6 overflow-x-hidden">
      <!-- Header -->
      <header class="bg-[#1a1a1a] p-6 rounded mb-4">
        <slot name="header" />
      </header>

      <!-- Métricas -->
      <section class="mb-8">
        <slot name="MetricCard" />
      </section>

      <!-- Paneles secundarios -->
      <section class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
        <slot name="NotificationsPanel" />
        <slot name="CalendarioWidget" />
      </section>

      <!-- Acción rápida -->
      <!-- <section class="mb-8">
        <slot name="AccionRapida" />
      </section> -->

      <!-- Contenido principal -->
      <section>
        <slot name="ListaEventos" />
      </section>
    </main>

  </body>
</html>
